{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "ES2018",
    "downlevelIteration": true,
    "lib": ["DOM", "ES2018"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.test.ts", "lib"]
}
